{
    "name": "memories/cmem2-backend",
    "description": "Backend API pour l'application Memories v2",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "firebase/php-jwt": "^6.0",
        "phpmailer/phpmailer": "^6.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AuthGroups\\": "src/auth_groups/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8080 index.php"
    },
    "config": {
        "optimize-autoloader": true
    }
}
