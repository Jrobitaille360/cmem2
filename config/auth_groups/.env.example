# Configuration de base de données pour le module auth_groups
# Copiez ce fichier vers .env.auth_groups et modifiez les valeurs

# Base de données
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cmem2_db
DB_USERNAME=root
DB_PASSWORD=

# Environnement
APP_ENV=development
APP_DEBUG=true
BASE_URL=http://localhost:8080
API_VERSION=v1

# Sécurité JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=3600

# Email (optionnel pour les invitations)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=CMEM2 API

# Logs
LOG_LEVEL=debug
LOG_MAX_FILES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=API en maintenance