# ============================================
# CONFIGURATION MEMORIES_ELEMENTS - MODULE OPTIONNEL
# ============================================
# Variables pour les mémoires et le contenu multimédia
# Ce fichier doit être copié vers .env.memories_elements et configuré

# ============================================
# MÉMOIRES ET CONTENU
# ============================================
# Limites des mémoires
MAX_MEMORIES_PER_USER=1000
MAX_MEMORY_TITLE_LENGTH=200
MAX_MEMORY_DESCRIPTION_LENGTH=5000

# Éléments par mémoire
MAX_ELEMENTS_PER_MEMORY=50
MAX_ELEMENT_TITLE_LENGTH=100
MAX_ELEMENT_DESCRIPTION_LENGTH=2000

# Visibilité et permissions
DEFAULT_MEMORY_VISIBILITY=private
ALLOW_PUBLIC_MEMORIES=true
REQUIRE_MEMORY_APPROVAL=false

# Dates de mémoires
ALLOW_FUTURE_MEMORY_DATES=false
MIN_MEMORY_YEAR=1900
MAX_MEMORY_YEAR=2026

# ============================================
# GÉOLOCALISATION
# ============================================
ENABLE_MEMORY_GEOLOCATION=true
GEOLOCATION_PRECISION=6

# ============================================
# RECHERCHE ET INTERACTION
# ============================================
# Recherche de mémoires
MEMORY_SEARCH_MIN_LENGTH=3
MEMORY_SEARCH_MAX_RESULTS=100
ENABLE_MEMORY_FULLTEXT_SEARCH=true

# Statistiques et interactions
TRACK_MEMORY_VIEWS=true
TRACK_MEMORY_LIKES=true
ENABLE_MEMORY_COMMENTS=true

# ============================================
# UPLOADS MULTIMÉDIA - IMAGES
# ============================================
# Images de mémoires
MAX_MEMORY_IMAGE_SIZE=10485760
MEMORY_IMAGE_MAX_WIDTH=4096
MEMORY_IMAGE_MAX_HEIGHT=4096
MEMORY_THUMBNAIL_WIDTH=300
MEMORY_THUMBNAIL_HEIGHT=300

# Types d'images autorisés
ALLOWED_MEMORY_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp,image/bmp,image/tiff

# ============================================
# UPLOADS MULTIMÉDIA - VIDÉOS
# ============================================
# Vidéos de mémoires
MAX_MEMORY_VIDEO_SIZE=104857600
MAX_MEMORY_VIDEO_DURATION=600
MEMORY_VIDEO_THUMBNAIL_TIME=5

# Types de vidéos autorisés
ALLOWED_MEMORY_VIDEO_TYPES=video/mp4,video/webm,video/ogg,video/avi,video/mov,video/wmv

# ============================================
# UPLOADS MULTIMÉDIA - AUDIO
# ============================================
# Audio de mémoires
MAX_MEMORY_AUDIO_SIZE=52428800
MAX_MEMORY_AUDIO_DURATION=1800

# Types d'audio autorisés
ALLOWED_MEMORY_AUDIO_TYPES=audio/mpeg,audio/wav,audio/ogg,audio/mp3,audio/flac,audio/aac

# ============================================
# UPLOADS MULTIMÉDIA - DOCUMENTS
# ============================================
# Documents de mémoires
MAX_MEMORY_DOCUMENT_SIZE=20971520
MEMORY_DOCUMENT_PREVIEW_PAGES=3

# Types de documents autorisés
ALLOWED_MEMORY_DOCUMENT_TYPES=application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# TRAITEMENT MULTIMÉDIA
# ============================================
# Compression et optimisation
ENABLE_IMAGE_COMPRESSION=true
IMAGE_COMPRESSION_QUALITY=85
ENABLE_VIDEO_COMPRESSION=false
GENERATE_MULTIPLE_RESOLUTIONS=true

# ============================================
# PAGINATION ET AFFICHAGE
# ============================================
# Pagination des mémoires
MEMORIES_DEFAULT_PAGE_SIZE=12
MEMORIES_MAX_PAGE_SIZE=50
MEMORIES_MIN_PAGE_SIZE=6

# Pagination des éléments
ELEMENTS_DEFAULT_PAGE_SIZE=20
ELEMENTS_MAX_PAGE_SIZE=100
ELEMENTS_MIN_PAGE_SIZE=5

# Pagination des commentaires
COMMENTS_DEFAULT_PAGE_SIZE=10
COMMENTS_MAX_PAGE_SIZE=50

# ============================================
# AFFICHAGE EN GRILLE
# ============================================
# Colonnes par device
MEMORY_GRID_COLS_MOBILE=1
MEMORY_GRID_COLS_TABLET=2
MEMORY_GRID_COLS_DESKTOP=3

# ============================================
# PERFORMANCE ET CACHE
# ============================================
# Lazy loading
ENABLE_LAZY_LOADING=true
LAZY_LOADING_THRESHOLD=200

# Cache de pagination
ENABLE_PAGINATION_CACHE=true
PAGINATION_CACHE_DURATION=300

# ============================================
# FILTRES ET VUES
# ============================================
# Filtres d'affichage
ENABLE_MEMORY_FILTERS=true
AVAILABLE_MEMORY_SORTS=date_desc,date_asc,title_asc,views_desc,likes_desc
DEFAULT_MEMORY_SORT=date_desc

# Vues d'affichage
AVAILABLE_MEMORY_VIEWS=grid,list,timeline,map
DEFAULT_MEMORY_VIEW=grid

# ============================================
# PRODUCTION - AJUSTEMENTS RECOMMANDÉS
# ============================================
# MAX_MEMORY_IMAGE_SIZE=5242880
# MAX_MEMORY_VIDEO_SIZE=52428800
# ENABLE_VIDEO_COMPRESSION=true
# IMAGE_COMPRESSION_QUALITY=75
# ENABLE_PAGINATION_CACHE=true
# PAGINATION_CACHE_DURATION=600